{
	"manifest_version": 3,
	"name": "OneTwoOne",
	"short_name": "OneTwoOne",
	"description": "Defines and manages who should be able to sign into a device",
	"version": "0.4",
	"icons": {
		"128": "logo.png"
	},
	"background": {
		"service_worker": "background.js"
	},
	"minimum_chrome_version": "88",
	"permissions": [
		"identity",
		"identity.email",
		"enterprise.deviceAttributes",
		"activeTab",
		"webRequest",
		"declarativeNetRequestWithHostAccess"
	],
	"host_permissions": ["*://*/*"]
}
